%%% Code listings
\usepackage{verbatim}
\usepackage{listings}
\lstloadlanguages{C, Python}
\lstdefinestyle{mycolorstyle}{
    basicstyle=\footnotesize\ttfamily,
    % Syntax Colors
        keywordstyle=\color{unalredmain}, % defined above
        stringstyle=\color{unalgreenmain},
        commentstyle=\itshape\color{unalgraydark},
    % Spacing
        showstringspaces=false,
        keepspaces,
        breaklines=false, % nowrap
        tabsize=4,
    % Line numbers
        numbers=left,
        numberstyle=\tiny,
        numbersep=3pt,
        % stepnumber=2,
    % Frame and caption
        frame=lines,
        rulecolor=\color{black},
        captionpos=top,
}
